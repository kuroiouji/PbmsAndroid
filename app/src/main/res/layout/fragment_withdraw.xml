<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7d7d7"
    tools:context="com.pbms.pbmsandroid.page.WithdrawFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="#b4ffffff"
        android:orientation="vertical"
        android:padding="15dp">

        <!--bgy_id-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <!--ปีงบประมาณ-->
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="ปีงบประมาณ"
                android:textStyle="bold" />

            <!--wd_bgy_id-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_line">

                <Spinner
                    android:id="@+id/wd_bgy_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

        </LinearLayout>

        <!--Bill Code-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <!--เลขที่ใบเบิก-->
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="เลขที่ใบเบิก"
                android:textStyle="bold" />

            <!--bill_code-->
            <EditText
                android:id="@+id/bill_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_line"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="16dp"/>

        </LinearLayout>

        <!--Bill Topic-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <!--เรื่องเบิก-->
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="เรื่องเบิก"
                android:textStyle="bold" />

            <!--bill_topic-->
            <EditText
                android:id="@+id/bill_topic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_line"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="16dp"/>

        </LinearLayout>

        <!--Bill Date-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <!--วันที่ตัดยอดเบิก-->
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="วันที่ตัดยอดเบิก"
                android:textStyle="bold" />

            <!--bill_date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_line">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/datePicker"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <!--Person Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <!--ผู้ทำเรื่องเบิก-->
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="ผู้ทำเรื่องเบิก"
                android:textStyle="bold" />

            <!--person_item-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_line">

                <Spinner
                    android:id="@+id/ps_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

        </LinearLayout>

        <!--Button Withdraw-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <!--บันทึก-->
            <Button
                android:id="@+id/btn_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_button_success"
                android:text="บันทึก"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
